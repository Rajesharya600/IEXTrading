<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ritz.iextrading.ViewControlllers.MainActivity">



    <EditText
        android:layout_width="200dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/custom_edittext"
        android:id="@+id/stocksymbol"
        android:layout_centerVertical="true"
        android:layout_above="@+id/search"
        android:hint="STOCK SYMBOL"

        android:gravity="center"
        android:textSize="16sp"
        android:layout_marginBottom="20dp"
        android:layout_height="30dp"
        />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="SEARCH"
        android:layout_marginBottom="120dp"
        android:id="@+id/search"
        android:background="@drawable/custom_button"
        android:layout_above="@+id/error"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Name"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:id="@+id/tv1"
        android:visibility="gone"
        android:layout_above="@+id/companyname"
        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:id="@+id/progressbar"
        android:visibility="gone"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/error"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_above="@+id/tv2"
        android:visibility="gone"
        android:text=""
        android:textColor="#000000"
        android:gravity="center"
        android:background="@drawable/custom_textview"
        android:id="@+id/companyname"
        android:textSize="14sp"

        android:layout_centerHorizontal="true"
         />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Company Website"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_above="@+id/companywebsite"
        android:visibility="gone"
        android:id="@+id/tv2"

        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:background="@drawable/custom_textview"
        android:id="@+id/companywebsite"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ceo"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/companywebsite"
        android:id="@+id/tv3"
        android:visibility="gone"

        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/tv3"
        android:text=""
        android:visibility="gone"
        android:gravity="center"
        android:background="@drawable/custom_textview"
        android:id="@+id/ceo"
        android:textColor="#000000"
        android:textSize="14sp"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock Value"
        android:id="@+id/tv4"
        android:layout_centerHorizontal="true"
        android:textSize="12sp"
        android:visibility="gone"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/ceo"
        />
    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:layout_below="@+id/ceo"
        android:text=""
        android:textColor="#000000"
        android:gravity="center"
        android:visibility="gone"
        android:id="@+id/stockvalue"
        android:background="@drawable/custom_textview"
        android:textSize="14sp"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        />



</RelativeLayout>
